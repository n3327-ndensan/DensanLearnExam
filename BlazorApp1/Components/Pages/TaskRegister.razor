@page "/task-register"  
@using BlazorApp1.Components.Entity
<h3>タスク登録</h3>

<EditForm Model="@taskItem">
    <table>
        <tr>
            <td>題名</td>
            <td><RadzenTextBox Style="width:352px" @bind-Value="taskItem.題名" /></td>
        </tr>
        <tr>
            <td>期限</td>
            <td><RadzenDatePicker Style="width:150px" @bind-Value="taskItem.期限" DateFormat="yyyy-MM-dd" /></td>
        </tr>
        <tr>
            <td>状態</td>
            <td>
                <RadzenRadioButtonList TValue="int">
                    <Items>
                    @foreach (var taskStatus in Enum.GetValues(typeof(Entity.TaskStatus)))
                        {
                            <RadzenRadioButtonListItem Text=@taskStatus.ToString() Value=@((int) @taskStatus) />
                        }
                    </Items>
                </RadzenRadioButtonList>
            </td>
        </tr>
        <tr>
            <td>内容</td>
            <td><RadzenTextArea Style="width:352px; height:210px" @bind-Value="taskItem.内容"/></td>
        </tr>
    </table>
</EditForm>


@code {
    private Entity.TaskItem taskItem = new TaskItem("aaa",　DateTime.Now);
}
